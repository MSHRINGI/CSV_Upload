<link rel="stylesheet" href="/css/showFile.css">

<section>
    <div class="container p-2" id="file-data-container">
        <div class="row border d-flex justify-content-between align-items-center text-white p-2" id="heading-div">
            <div class="col-6">
                <h3><i class="fas fa-database"></i> Here is your data</h3>
            </div>

            <!-- For searching in first column -->
            <div class="input-group flex-nowrap col-6 w-50">
                <span class="input-group-text" id="addon-wrapping"><i class="fas fa-search"></i></span>
                <input type="text" class="form-control" id="myInput" placeholder="Search in <%= tableData.header[0] %>..." onkeyup="myFunction()" aria-label="Username" aria-describedby="addon-wrapping">
              </div>
        </div>

        <!-- This is the table with the desired data -->
        <div class="row">
            <table id="myTable" class="styled-table">
                <tr>
                    <% for(heading of tableData.header) {%> 
                        <th><%= heading %></th>
                    <%} %>
                </tr>
                <% for(let i=1; i<tableData.data.length; i++) {%>
                    <tr>
                        <% for(let j=0; j<tableData.data[0].length; j++){%>
                            <td><%= tableData.data[i][j] %></td>    
                        <%}%>
                    </tr>    
                <%}%>
            </table>
        </div>
    </div>

</section>

<script src="/js/showFile.js"></script>